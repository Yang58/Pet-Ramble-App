<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBG"
    android:orientation="vertical"
    tools:context=".Community.ui.main.community_detail_write">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cm_main_img_cover_picture"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:foreground="@drawable/rounded_fg"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dog"
                tools:src="@tools:sample/avatars" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cm_main_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="누구누구"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.095" />

                <TextView
                    android:id="@+id/cm_main_txt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@id"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/cm_main_txt_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/naeyongField"
                    android:layout_width="match_parent"
                    android:layout_height="312dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <Space
                    android:layout_width="141dp"
                    android:layout_height="11dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공유하기"
                    app:icon="@drawable/asset_10" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>