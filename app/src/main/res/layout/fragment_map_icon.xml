<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_textview"
    android:orientation="vertical"
    tools:context=".GoogleMap.map_icon">

    <TextView
        android:id="@+id/map_icon_name"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_textview"
        android:backgroundTint="@color/defaultBG"
        android:fontFamily="@font/tmoneyroundwindextrabold"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />

    <ImageView
        android:id="@+id/map_icon_container"
        android:layout_width="49dp"
        android:layout_height="46dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dog" />

    <ImageView
        android:id="@+id/map_icon_container2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/marker" />

</FrameLayout>