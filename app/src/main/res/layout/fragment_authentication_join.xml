<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    tools:context=".authentication">

    <TextView
        android:id="@+id/auth_join_txt_picUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="nothing"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/tmoneyroundwindextrabold"
        android:text="없으시다면\n지금부터 만들어볼까요?"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="31dp" />

    <EditText
        android:id="@+id/auth_join_txt_name"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름을 입력해주세요"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/auth_join_txt_id"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="아이디로 사용하실 이메일을 입력해주세요"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/auth_join_txt_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="프로필로 사용할 그림을 골라주세요"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/auth_join_btn_imageUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/asset_96" />

    </LinearLayout>

    <TextView
        android:id="@+id/auth_join_txt_uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="생성시 UID "
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/auth_join_btn_join"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/holo_green_dark"
        android:fontFamily="sans-serif"
        android:text="가입하기" />

    <Button
        android:id="@+id/auth_join_btn_reset"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/holo_green_dark"
        android:fontFamily="sans-serif"
        android:text="초기화" />
</LinearLayout>