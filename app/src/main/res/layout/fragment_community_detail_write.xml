<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBG"
    android:orientation="vertical"
    tools:context=".Community.ui.main.community_detail_write">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:theme="@style/MaterialTheme"
        android:backgroundTint="@color/custom2"
        android:clickable="true"
        android:text="저장"
        android:gravity="center"
        app:icon="@android:drawable/ic_menu_edit"
        app:fabSize="auto"
        app:maxImageSize="30dp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="10dp"
        android:text="사진 올리기"
        android:theme="@style/MaterialTheme"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:backgroundTint="@color/custom2"
        android:clickable="true"
        app:icon="@android:drawable/ic_menu_camera"
        app:fabSize="auto"
        app:maxImageSize="30dp" />

    <LinearLayout
        android:id="@+id/cm_detail_write_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/cm_main_img_cover_picture"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="4.5"
                    android:foreground="@drawable/rounded_fg"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:hint="이미지 추가시 여기에 표시됩니다."/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cm_main_txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="누구누구"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.095" />

                <TextView
                    android:id="@+id/cm_main_txt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@id"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/cm_main_txt_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <EditText
                android:id="@+id/naeyongField"
                android:hint="내용을 입력해주세요."
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="10dp"
                android:background="@drawable/corner_border3"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textAlignment="viewStart" />


        </LinearLayout>
    </LinearLayout>
</FrameLayout>


