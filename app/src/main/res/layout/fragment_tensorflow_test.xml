<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    tools:context=".tensorflowTest">

    <ImageView
        android:id="@+id/tf_img"
        android:layout_width="255dp"
        android:layout_height="275dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300px"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tf_btn_1"
            android:layout_width="220dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner_textview"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:gravity="center"
            android:padding="2px"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorTertiaryInverse"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tf_btn_2"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/round_corner_textview"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:gravity="center"
                android:padding="2px"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorTertiaryInverse"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/tf_btn_3"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/round_corner_textview"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:gravity="center"
                android:padding="2px"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorTertiaryInverse"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/tf_btn_4"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/round_corner_textview"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:gravity="center"
                android:padding="2px"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorTertiaryInverse"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/tf_btn_5"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@drawable/round_corner_textview"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:gravity="center"
                android:padding="2px"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorTertiaryInverse"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <Button
            android:id="@+id/tf_btn_getImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="가져오기" />

    </LinearLayout>

</LinearLayout>