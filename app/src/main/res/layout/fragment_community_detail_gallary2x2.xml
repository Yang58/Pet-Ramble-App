<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".community_detail_gallary1x1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content        "
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/cm_detail_view_gallary_2x2_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/cm_detail_view_gallary_2x2_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cm_detail_view_gallary_2x2_3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/cm_detail_view_gallary_2x2_4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

</LinearLayout>