<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">

        <!--image대신 직접 selector를 그리겠다고 선언한다. -->
        <shape >

            <!--도형안에 채워질 색을 정의한다.-->
            <solid android:color="#D8D1C5"/>

            <!-- width = 테두리 선의 굴기, color = 테두리 선의 색을 정의한다.-->
            <stroke android:width="2dp" android:color="#4b4c4c"/>

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape >
            <solid android:color="#BCFFF7E9"/>
            <stroke android:width="2dp" android:color="#28000000"/>
        </shape>
    </item>
</selector>