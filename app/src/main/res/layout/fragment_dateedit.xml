<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom1">

        <TextView
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="m월 dd일 일정 저장"
            android:textSize="20dp"
            android:fontFamily="@font/tmoneyroundwindextrabold"
            android:textColor="@color/custom4">
        </TextView>
    </LinearLayout>



    <TimePicker
        android:layout_margin="10dp"
        android:id="@+id/timepick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner">
    </TimePicker>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tx_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/tmoneyroundwindextrabold"
                android:text="일정 공개"
                android:textSize="15dp"/>
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/personal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/personal_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:text="공개"/>

            <RadioButton
                android:id="@+id/personal_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/RB_Gtrue"
                android:text="비공개"/>

        </RadioGroup>
    </LinearLayout>
    
    <EditText
        android:id="@+id/schedule_edit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:hint="일정을 입력하세요.">
    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/schedule_locate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:layout_above="@+id/schedule_sav"
            android:layout_margin="5dp"
            android:text="위치 변경">
        </Button>
        <Button
            android:id="@+id/schedule_sav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:layout_margin="5dp"
            android:layout_above="@+id/schedule_alarm"
            android:text="저장">
        </Button>
        <Button
            android:id="@+id/schedule_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:text="저장 및 알람">
        </Button>

    </RelativeLayout>



</LinearLayout>


