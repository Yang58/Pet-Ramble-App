<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project2.Main.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_Sreach"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/corner_border"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="추천 산책로"
                            android:textColor="@color/black"
                            android:fontFamily="@font/tmoneyroundwindextrabold"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:padding="5dp"
                            android:layout_gravity="center"/>

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="5dp">
                        </androidx.viewpager.widget.ViewPager>

                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            app:ci_drawable="@drawable/imagesilder"
                            app:ci_height="7dp"
                            app:ci_margin="4dp"
                            app:ci_width="7dp"/>
                    </LinearLayout>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="6"
                        android:layout_height="match_parent"
                        android:background="@drawable/corner_border"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_img"
                            android:layout_gravity="center"
                            android:src="@drawable/dog"
                            android:layout_margin="5dp"
                            android:layout_weight="2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/tmoneyroundwindextrabold"
                                android:textSize="20dp"
                                android:text="나의 강아지 정보  "/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:layout_margin="5dp"
                                    android:text="이름 : "/>
                                <TextView
                                    android:id="@+id/MPN"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:layout_margin="5dp"
                                    android:text="  "/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textSize="15dp"
                                    android:text="나이 : "/>
                                <TextView
                                    android:id="@+id/MPA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:layout_margin="5dp"
                                    android:text="  "/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:layout_margin="5dp"
                                    android:text="종류 : "/>
                                <TextView
                                    android:id="@+id/MPK"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:layout_margin="5dp"
                                    android:text="  "/>
                            </LinearLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom">
                                <TextView
                                    android:id="@+id/info_edit"
                                    android:textSize="12dp"
                                    android:hint="수정하기"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/black"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/corner_border"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/tmoneyroundwindextrabold"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="산책 기록"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/t1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="총 횟수"
                                    android:layout_margin="8dp"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:id="@+id/t2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:layout_margin="10dp"
                                    android:layout_below="@+id/t1"
                                    android:layout_centerHorizontal="true"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/t3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:hint="총 산책 거리"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:id="@+id/t4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:layout_margin="10dp"
                                    android:layout_below="@+id/t3"
                                    android:layout_centerHorizontal="true"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/t5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:hint="총 산책 시간"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:id="@+id/t6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00 : 00"
                                    android:textColor="@color/black"
                                    android:layout_margin="10dp"
                                    android:layout_below="@+id/t5"
                                    android:layout_centerHorizontal="true"/>
                            </RelativeLayout>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/black_overlay">
        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_nav"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/white"
            app:itemTextColor="@color/black"
            app:itemIconTint="@color/black"
            app:menu="@menu/home_navgationmenu"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>